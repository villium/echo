{
  "name": "@villium/echo",
  "version": "0.1.0",
  "description": "Comprehensive audio feature extraction library for signal analysis, visualization, and processing.",
  "keywords": [
    "audio",
    "signal-processing", 
    "feature-extraction",
    "mfcc",
    "pitch-detection",
    "onset-detection",
    "spectral-analysis",
    "machine-learning",
    "visualization",
    "typescript"
  ],
  "author": "Villium",
  "homepage": "https://github.com/villium/echo#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/villium/echo.git"
  },
  "bugs": {
    "url": "https://github.com/villium/echo/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "main": "dist/index.js",
  "module": "dist/index.js", 
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": ["dist"],
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "build:all": "npm run build && npm run build --workspaces",
    "build:packages": "npm run build --workspaces",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:packages": "npm run test --workspaces",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "tsup": "^8.0.0",
    "vitest": "^2.0.0",
    "@vitest/ui": "^2.0.0"
  }
}